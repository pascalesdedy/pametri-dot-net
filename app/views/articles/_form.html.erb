<div class="container">
<%= form_with(model: [@category,@article], local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
  <div class="col-md-6">
  <div class="form-group">
    <%= form.file_field :image %>
  </div>
  <div class="form-group">
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.select :category_id, Category.all.map { |a| [a.name, a.id] }, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.cktext_area :body, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit %>
  </div>
</div>
</div>


</div>
<% end %>
